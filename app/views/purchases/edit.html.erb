<!-- Validation failure messages -->
<% if @purchase.errors.any? %>
  <% @purchase.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Purchase #<%= @purchase.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_purchase/<%= @purchase.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for purchased_on -->
      <div class="form-group">
        <label for="purchased_on" class="control-label">
          Purchased on
        </label>

        <input type="text" id="purchased_on" name="purchased_on" placeholder="Purchased on" class="form-control" value="<%= @purchase.purchased_on %>">
      </div>

      <!-- Label and input for item_id -->
      <div class="form-group">
        <label for="item_id" class="control-label">
          Item
        </label>

        <input type="text" id="item_id" name="item_id" placeholder="Item" class="form-control" value="<%= @purchase.item.name%>">
      </div>

      <!-- Label and input for store_id -->
      <div class="form-group">
        <label for="store_id" class="control-label">
          Store
        </label>

        <input type="text" id="store_id" name="store_id" placeholder="Store" class="form-control" value="<%= @purchase.store_id %>">
      </div>

      <button class="btn btn-warning">
        Update Purchase
      </button>
      or
      <a href="/purchases/<%= @purchase.id %>">Cancel</a>
    </form>
  </div>
</div>
