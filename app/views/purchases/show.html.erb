<div class="page-header">
  <h3>Purchase: <%= @purchase.item.name%></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Purchased on</dt>
      <dd><%= @purchase.purchased_on %></dd>

      <dt>Item</dt>
     <dd><%= select_tag(:item_id, options_from_collection_for_select(Item.all, :id, :name, @item ), :class => "form-control") %></dd>

     <dt>Store</dt>
      <dd><%= select_tag(:store_id, options_from_collection_for_select(Store.all, :id, :name, @store ), :class => "form-control") %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/purchases" class="btn btn-primary">
        Back
      </a>
      <a href="/purchases/<%= @purchase.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_purchase/<%= @purchase.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

